<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/indigo</item>
        <item name="android:colorControlNormal">@color/indigo</item>
        <item name="android:textColorHint">@color/indigo</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
